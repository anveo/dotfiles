# homebrew needs /usr/local/sbin and /usr/local/share/python
if [ `uname` == 'Darwin' ]; then
  export PATH=/usr/local/share/python:/usr/local/bin:/usr/local/sbin:$PATH
fi

# $HOME/local paths
export PATH="${HOME}/bin:${HOME}/local/bin:${PATH}"
export MANPATH="${HOME}/local/share/man:${MANPATH}"
#export LD_LIBRARY_PATH="${HOME}/local/lib:${LD_LIBRARY_PATH}"
#export LD_RUN_PATH=$LD_LIBRARY_PATH
export CPPFLAGS="-I${HOME}/local/include"
export CXXFLAGS=$CPPFLAGS
export CFLAGS=$CPPFLAGS

# android linux
if [ -d "${HOME}/bin/android-sdk-linux_x86/tools" ]; then
  export PATH="${HOME}/bin/android-sdk-linux_x86/tools:${PATH}"
fi

if [ -d "${HOME}/bin/android-sdk-linux_x86/platform-tools" ]; then
  export PATH="${HOME}/bin/android-sdk-linux_x86/platform-tools:${PATH}"
fi

#amazon tools
if [ -d "${HOME}/bin/ec2-api-tools-1.4.4.0/bin" ]; then
  export PATH="${HOME}/bin/ec2-api-tools-1.4.4.0/bin:${PATH}"
fi

# node path
export NODE_PATH=/usr/local/lib/node_modules

# npm bin
export PATH=/usr/local/share/npm/bin:$PATH

#clojure
export CLASSPATH=$CLASSPATH:/usr/local/Cellar/clojure-contrib/1.2.0/clojure-contrib.jar

# brew install autojump
# https://github.com/joelthelion/autojump
if [ -f `brew --prefix`/etc/autojump ]; then
  . `brew --prefix`/etc/autojump
fi
