# ls
# Portable ls with colors
if ls --color -d . >/dev/null 2>&1; then
  alias ls='ls --color=auto'  # Linux
elif ls -G -d . >/dev/null 2>&1; then
  alias ls='ls -G'  # BSD/OS X
fi
alias l="ls -lAh"
alias ll="ls -la"
alias la="ls -A"
alias sl="ls"

